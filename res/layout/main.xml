<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >



        <TextView
            android:id="@+id/textViewLocationGpsInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textViewLocationGpsInformation"
            android:typeface="monospace"
            android:background="#9f9"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewLocationWifiInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textViewLocationWifiInformation"
            android:typeface="monospace"
            android:background="#57f"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLocationDiff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewLocationDiff"
        android:typeface="monospace"
        android:background="#ff9"
        android:textColor="#000000"
        android:layout_margin="2dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutMap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="2dp" />

</LinearLayout>